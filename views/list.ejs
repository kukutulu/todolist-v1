<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% taskList.forEach(task => { %>
  <form action="/delete" method="post">
    <div class="item">
      <input
        id="inputField"
        type="checkbox"
        name="checkbox"
        value="<%= task._id %>"
        onchange="this.form.submit()"
      />
      <input type="hidden" name="listName" value="<%= listTitle %>" />
      <label><%= task.name %></label>
    </div>
  </form>
  <% }); %>

  <form class="item" action="/" method="post">
    <input
      id="inputTask"
      type="text"
      name="newItem"
      placeholder="Task"
      autocomplete="off"
    />
    <button
      class="sendButton"
      type="submit"
      name="list"
      value="<%= listTitle %>"
    >
      +
    </button>
  </form>
</div>

<%- include("footer") -%>
